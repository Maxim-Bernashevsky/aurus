@import "../assets/styles/"

.button
  position: relative
  display: inline-block
  overflow hidden
  cursor pointer
  &BG
    width: 100%
    height: 100%
    position: absolute
    top: 0
    left: 0
    background _black
    border-radius 2px
    &:after
      _afterLine(2px)
      background linear-gradient(to right, _black, _black 7%, _gold, _black 93%, _black)
  a, a:visited, a:active
    position relative
    text-transform uppercase
    display inline-block
    padding 12px 25px
    text-decoration none
    color _gray
  &:hover div
    opacity: 1

.goldLight, .whiteLight
  position: absolute
  transform rotate(180deg)
  width: 100%
  height: 40px
  margin: 0 auto

.goldLight
  background radial-gradient(ellipse closest-side at 50% 6px, rgba(214, 181, 148, .7), transparent)
  transition opacity .28s linear
  opacity 0
  top 7px

.whiteLight
  background radial-gradient(ellipse closest-side at 50% 3px, rgba(255, 255, 255, .5), transparent)
  transition opacity .17s linear
  opacity 0
  top 5px
